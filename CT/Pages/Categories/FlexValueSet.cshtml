@page
@model CT.Pages.Categories.FlexValueSetModel 
@{

    ViewData["Title"] = "Quản lý danh mục";
} 

@{
    // Sample menu items
    var menuItems = new List<CTMenuItem>
    {
        new CTMenuItem { Text = "Home", Command = "/" },
        new CTMenuItem { Text = "About", Command = "/about" },
        new CTMenuItem { Text = "Contact", Command = "/contact" }
    };
}


<ct-menu-tool Items="menuItems">
</ct-menu-tool>

<ct-textbox 
htmlID='@Model.GetRefID("txt1")'
KHSetField="maxValue" 
Label="Kích thước tối đa">
</ct-textbox>



<script>
    var flexValueSetPage = null;

    document.addEventListener('DOMContentLoaded', function () {
         
        flexValueSetPage = new CTListForm();
         
        flexValueSetPage.configControls(
            [
                { btnADD: '@Model.GetRefID("txt1")' } 
            ]

        );
         
    });
     
</script>